<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#fbe3d1"
                                             android:windowSoftInputMode="adjustPan|adjustResize">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="200dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="200dp"
            android:layout_marginBottom="200dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="200dp">

        <EditText
                android:id="@+id/Connect_IP"
                android:layout_height="match_parent"
                android:inputType="number"
                android:digits="0123456789."
                android:singleLine="true"
                android:hint="@string/IP_Address"
                android:layout_marginEnd="88dp" android:layout_width="match_parent"
                android:textColorLink="@color/design_default_color_primary"/>

        <Button
                android:text="@string/action_connect"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="0dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/ConnectButton" android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"/>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>